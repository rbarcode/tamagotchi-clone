<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tamagotchi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body style="background-color: rgb(185, 185, 211)">
  @using Tamagotchi.Models

  <h1>Your Tamagotchi Pets</h1>
  
  <ul>
    @if(Model.Count == 0)
    {
      <p>You do not currently have any pets.</p>
    }
    @foreach (Pet individual in Model)
    {
      <li>
        <a href='/pets/@individual.Id'>
          <h4>Pet: @individual.Name</h4>
        </a><br />
        Hunger: @individual.Food <br />
        Attention: @individual.Attention <br />
        Rest: @individual.Rest <br />
      </li>
    }
  </ul>
  
  @if (Model.Count != 0)
  {
    <form action="/pets/passtime" method="post">
      <button type="submit" name="button">Pass Time</button>
    </form>
  }

  <br/>
  <a href="pets/new">Add a Pet</a>

</body>
</html>
